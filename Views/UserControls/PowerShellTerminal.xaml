<UserControl
    x:Class="LabelImg.Views.UserControls.PowerShellTerminal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LabelImg.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Unloaded="UserControl_Unloaded"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Gray" />
            <Setter Property="Width" Value="10" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid x:Name="Bg" Background="{TemplateBinding Background}">
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb Width="10" Background="White" />
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <TextBox
            x:Name="terminalTextBox"
            AcceptsReturn="True"
            Background="Black"
            CaretBrush="White"
            FontFamily="Consolas"
            FontSize="14"
            Foreground="White"
            HorizontalScrollBarVisibility="Auto"
            PreviewKeyDown="TerminalTextBox_PreviewKeyDown"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />
    </Grid>
</UserControl>
